<h1>Here are all the questions</h1>

<% if user_signed_in? %>
<!-- remote is data-remote in the html element -->
	<h3><%= link_to 'add new question', new_question_path, id: "new_question_link", remote: true %></h3>
<% end %>

<div id="all-questions">
	<ol>
		<% @questions.each do |question| %>
			<%= render partial: 'question', locals: { question: question } %>
		<% end %>
	</ol>
</div>

